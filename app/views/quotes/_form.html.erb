<%= form_with(
  model: quote,
  class: "quote form"
) do |f| %>
  <% if quote.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.text_field(:name, autofocus: true, autocomplete: "off") %>

  <%= tag.div do %>
    <%= link_to("Cancel", quotes_path, class: "btn btn--light") %>
    <%= f.submit(class: "btn btn--secondary") %>
  <% end %>
<% end %>